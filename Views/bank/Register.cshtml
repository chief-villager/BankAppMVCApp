@model CustomerRegistrationRequestDto
<partial name="~/Views/Shared/_GeneralStylePartial.cshtml" />
@{

}


<form class="row g-3" method="post">
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" type="text" class="form-control" id="inputEmail4">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" id="inputPassword4">
        <span asp-validation-for="LastName" class="text-danger"></span>

    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" id="inputEmail4">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="col-md-6">
        <label asp-for="PassWord" class="form-label"></label>
        <input asp-for="PassWord" type="password" class="form-control" id="inputPassword4">
        <span asp-validation-for="PassWord" class="text-danger"></span>

    </div>
    <div class="col-md-12">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="col-md-6">
        <label asp-for="Question" class="form-label">Question</label>
        <select asp-for="Question" id="inputState" class="form-select">
            <option selected></option>
            <option>What city did you grow up ?</option>
            <option>What is the name of your highschool?</option>
            <option>What is your favorite color?</option>
            <option>What is the color of your first car?</option>
            <option>What is your favorite basketball?</option>
            <option>What is the name of your favorite restaurant?</option>
        </select>
        <span asp-validation-for="Question" class="text-danger"></span>

    </div>
    <div class="col-md-6">
        <label asp-for="Answer" class="form-label">Answer</label>
        <input asp-for="Answer" class="form-control" id="inputEmail4">
        <span asp-validation-for="Answer" class="text-danger"></span>

    </div>


    <div class="col-12">
        <button type="submit" class="btn btn-primary">Sign in</button>
    </div>

</form>
