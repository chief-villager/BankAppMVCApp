@model CreateTransactionRequestDto
@{
    ViewData["Title"] = "CreateTransaction";
}

<h1>@ViewData["Title"]</h1>

<div>
    <partial name="~/Views/Shared/_GeneralStylePartial.cshtml" />

    <form method="post">
        <div asp-validation-summary="All">
            <div>
                <label asp-for="TransactionType"></label>
                <input asp-for="TransactionType" type="text">
                <span asp-validation-for="TransactionType" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="TransactionDetail"></label>
                <input asp-for="TransactionDetail" type="text">
                <span asp-validation-for="TransactionDetail" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Amount"></label>
                <input asp-for="Amount" type="text">
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="AccountNumber"></label>
                <input asp-for="AccountNumber" type="text">
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">create</button>
        </div>
    </form>

</div>