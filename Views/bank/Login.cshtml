@model LoginRequestDto
<div>
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>

    }
    @if (ViewBag.login != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h3>Welcome @ViewBag.login</h3>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    }

    <style>
        .loginform {
            margin-left: 80px;
            margin-top: 100px;
        }

        body {
            background-image: url("/images/login.jpeg");
        }
    </style>
</div>
<partial name="~/Views/Shared/_GeneralStylePartial.cshtml" />


<form class="loginform" method="post">
    <div class=" form-group">
        <h4><Strong>Welcome</Strong></h4>
        <div asp-validation-summary="All">
            <div class="col-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-6">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" id="inputEmail4" placeholder="">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <p></p>
    <div>
        <button type="submit" class="btn btn-primary">Log In</button>
        <a asp-area="" class="nav-link text-dark" asp-controller="bank" asp-action="Register">Set up your online account
            or
            get help signing in.</a>
    </div>

</form>
